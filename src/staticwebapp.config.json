{
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login"
        }
    },    
    "routes": [
        {
            "route": "/",
            "rewrite": "/index.html",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login",
            "rewrite": "/login.html",
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/",
            "rewrite": "/index.html",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login",
            "rewrite": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/.auth/login/github",
            "statusCode": 404,
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/*",
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "auth": {
      "identityProviders": {
        "customOpenIdConnectProviders": {
          "tenantOneProvider": {
            "registration": {
              "clientIdSettingName": "TENANT1_CLIENTID",
              "clientCredential": {
                "clientSecretSettingName": "TENANT1_CLIENTSECRET"
              },
              "openIdConnectConfiguration": {
                "wellKnownOpenIdConfiguration": "https://login.microsoftonline.com/9f6a72f8-9ea8-4731-bddf-d87068794b96/v2.0/.well-known/openid-configuration"
              }
            },
            "login": {
              "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
              "scopes": ["openid", "email", "profile"],
              "loginParameterNames": []
            }
          },
          "tenantTwoProvider": {
            "registration": {
              "clientIdSettingName": "TENANT2_CLIENTID",
              "clientCredential": {
                "clientSecretSettingName": "TENANT2_CLIENTSECRET"
              },
              "openIdConnectConfiguration": {
                "wellKnownOpenIdConfiguration": "https://login.microsoftonline.com/46fc1259-8b47-4600-b595-52cb2074bd58/v2.0/.well-known/openid-configuration" 
              }
            },
            "login": {
              "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
              "scopes": ["openid", "email", "profile"],
              "loginParameterNames": []
            }
          }
        }
      }
    }
}